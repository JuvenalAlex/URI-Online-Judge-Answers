package linearsearch;
import java.util.Arrays;
import java.util.Random;
import java.util.Scanner; 

public class LinearSearch {

    /**
     * @param args the command line arguments
     */
    
    public static int BuscarVetor(){
        
        Scanner reader = new Scanner(System.in);
        System.out.println("Entre com o número a ser buscado de 0 à 10.000: ");
        int m = reader.nextInt();
        return m;
    }
    
    public static void main(String[] args) {
        Random gerador = new Random();
        int i = 0, j = 0, k = 0, n = 10000;
        
        int[] index = new int[n+1];
        
        while(i<n){
            int numero = gerador.nextInt(n);
            index[i] = numero;
            i++;
        }
        System.out.println(Arrays.toString(index));
                
        int x = BuscarVetor();
        index[n] = x;
        System.out.println(index[n]);
        
        while(j < n){
            if(index[j] == index[n]){
                System.out.print("O número " + index[j] + " foi encontrado na posição " + j + " do vetor\n");
                return;
            }            
            j++;
        }
        if(j==n){
            System.out.print("O número não existe\n");
        }
    }
    
    
}
